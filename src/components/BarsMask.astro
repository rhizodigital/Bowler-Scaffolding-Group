---
interface Props {
    image: string;
    fallback: string;
    alt: string;
}

const { image, fallback, alt } = Astro.props;
---
<picture>
    <source srcset={image} type="image/webp">
    <source srcset={fallback} type="image/jpeg">
    <img src={fallback} alt={alt} class="w-full object-cover aspect-[4/2.6] bars-mask">
</picture>


<style>
    .bars-mask {
        mask-image: url(/images/bars.svg);
        mask-repeat: no-repeat;
        mask-size: contain;
    }
</style>