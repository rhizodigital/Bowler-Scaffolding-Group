---
import { Image } from "astro:assets";
import LogoMark from "@images/MonoB.svg";
interface Props {
  image: ImageMetadata;
  alt: string;
}

const { image, alt } = Astro.props;
---

<Image
  src={image}
  alt={alt}
  width={image.width}
  densities={[1.5, 2]}
  class="w-full object-cover aspect-square"
  style=`mask-image: url(${LogoMark.src}); mask-repeat: no-repeat; mask-size: contain;`
/>
