---
import { Image } from "astro:assets";
import LogoMark from "../images/mk-logomark.svg";
interface Props {
  image: ImageMetadata;
  alt: string;
}

const { image, alt } = Astro.props;
---

<Image
  src={image}
  alt={alt}
  class="w-full object-cover size-80 bars-mask"
  style=`mask-image: url(${LogoMark.src}); mask-repeat: no-repeat; mask-size: contain;`
/>
