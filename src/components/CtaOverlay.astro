---
import Container from "./Container.astro";
import { Icon } from "astro-icon/components";
import Bars from "./MKBars.astro";
---

<div
  class="bg-orange-500 md:bg-transparent py-4 md:py-0 relative overflow-hidden"
>
  <Container className="relative">
    <div
      class="flex flex-col items-start lg:flex-row lg:items-center justify-between gap-4 md:gap-8 bg-orange-500 py-4 md:p-12 md:rounded-3xl md:relative md:overflow-hidden"
    >
      <Bars
        class="absolute top-1/2 left-0 -translate-y-1/2 h-[150%] z-0 text-orange-400/40"
      />
      <div class="max-w-3xl relative">
        <p class="text-white text-2xl md:text-2xl font-bold antialiased">
          Get your FREE no-obligation quote today!
        </p>
        <p
          class="text-white md:text-lg mt-4 leading-relaxed md:leading-relaxed"
        >
          We’re committed to providing competitive prices, outstanding service,
          and expert advice. Whether it’s residential, commercial, or industrial
          scaffolding, we’ve got you covered.
        </p>
      </div>
      <a
        href="/scaffolding-quote/"
        class="relative bg-zinc-50 hover:ring-zinc-50/20 hover:ring-4 text-zinc-800 font-semibold rounded-full md:text-lg pl-8 pr-2 py-3 md:pl-8 md:pr-3 md:py-4 shrink-0 grow-0 transition-all hover:shadow-lg flex items-center gap-6"
        ><span>Book my free quote now!</span>
        <div
          class="border border-current size-8 flex items-center justify-center rounded-full"
        >
          <Icon
            name="material-symbols:arrow-outward-rounded"
            size={16}
            class="size-5"
          />
        </div>
      </a>
    </div>
  </Container>
</div>
