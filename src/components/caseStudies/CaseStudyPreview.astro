---
import { SITE } from "src/site.config";
import ImageCard from "@components/ImageCard.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  article: CollectionEntry<"caseStudies">;
}

const { article } = Astro.props;

const url = `/${SITE.caseStudies.base}/${article.id}/`;
---

<ImageCard
  url={url}
  image={article.data.coverImage}
  alt={article.data.title}
  transitionId={article.id}
>
  <div slot="body">
    <h2 class="text-2xl font-semibold" transition:name={`${article.id} title`}>
      {article.data.title}
    </h2>

    <div class="mt-3 flex flex-wrap gap-2">
      {
        article.data.relatedServices.map((service) => (
          <span class="text-sm text-gray-600">{service}</span>
        ))
      }
    </div>
  </div>
</ImageCard>
