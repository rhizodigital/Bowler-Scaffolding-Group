---
import { Image } from "astro:assets";

export interface Props {
  src: ImageMetadata;
  alt?: string;
}

const { src, alt = "" } = Astro.props;
---

<div class="swiper-slide">
  <Image
    src={src}
    alt={alt}
    height={300}
    class="w-full aspect-square object-cover rounded-3xl cursor-pointer"
  />
</div>
