---
import { Image } from "astro:assets";

export interface Props {
  src: ImageMetadata;
  alt?: string;
}

const { src, alt = "" } = Astro.props;
---

<div class="swiper-slide">
  <Image
    src={src}
    alt={alt}
    height={1200}
    class="w-full aspect-[4/3] object-cover rounded-3xl"
  />
</div>
