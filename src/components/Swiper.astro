---

import 'swiper/css';
import Grid from "../components/Grid.astro";
import bars from '../images/bars.svg';
import Container from './Container.astro';

---

<div class="swiper swiper1 w-full lg:h-[45vw] lg:max-h-[600px]">
    <div class="swiper-wrapper">

      <div class="swiper-slide relative bg-zinc-800 md:pb-12">
        <div class="w-full h-full absolute top-0 bottom-0 left-0 right-0 -z-50 text-zinc-700 opacity-40">
            <Grid size="100" id="slide-pattern" />
        </div>
        <Container className="h-full py-12 md:py-8">
            <div class="flex flex-col lg:flex-row h-full gap-8 lg:gap-12">
                <div class="basis-1/3 h-full flex items-center">
                    <div class="md:max-lg:grid md:max-lg:grid-cols-2 md:max-lg:gap-6 md:max-lg:items-center">
                        <p class="text-gray-50 text-5xl sm:text-4xl md:text-5xl font-bold leading-tight">All the gear. Lots of <span class="text-orange-500">ideas</span></p>
                        <p class="text-zinc-400 md:text-xl mt-4 md:mt-8 md:max-lg:mt-0">With a constantly growing and trustworthy fleet and a wide range of well-maintained scaffolding equipment stored in weather-resistant conditions, our scaffold service remains unmatched in reliability and accessibility.</p>
                    </div>
                </div>
                <div class="basis-2/3 h-full flex items-center">
                    <div class="w-full aspect-video relative">
                        <img src={bars} alt="" class="absolute bottom-0 right-0 h-12 w-auto translate-y-6 -translate-x-6">
                        <picture>
                            <source srcset="/images/home/scaff-1200-900.webp" type="image/webp">
                            <source srcset="/images/home/scaff-1200-900.jpg" type="image/jpeg">
                            <img src="/images/home/scaff-1200-900.jpg" alt="Milton Keynes Scaffolding Specialists" class="h-full w-full object-cover rounded-3xl md:rounded-l-3xl shadow-2xl">
                        </picture>
                    </div>
                </div>
            </div>
        </Container>
      </div>



    </div>
</div>

<script>
    import Swiper, { Autoplay } from 'swiper';
    
    var swiper1 = new Swiper('.swiper1', {
        modules: [Autoplay],
        spaceBetween: 0,
        centeredSlides: true,

        autoplay: {
            delay: 7500,
            disableOnInteraction: false,
        }
    });
</script>
