---
const { size, stroke, id } = Astro.props;
const halfSize = size / 2;

---

<svg width="100%" height="100%">
    <pattern id={`grid-${id}`} patternUnits="userSpaceOnUse" width={size} height={size} viewBox={`0 0 ${size} ${size}`}>
        <g id={`grid-lines-${id}`}>
            <line x1={halfSize} y1="0" x2={halfSize} y2={size} stroke="currentColor" stroke-width={stroke || 1} />
            <line x1="0" y1={halfSize} x2={size} y2={halfSize} stroke="currentColor" stroke-width={stroke || 1} />
        </g>
        <use x="0" y="0" xlink:href={`#grid-lines-${id}`}></use>
    </pattern>
    <rect x="0" y="0" width="100%" height="100%" fill={`url(#grid-${id})`}></rect>
</svg>
