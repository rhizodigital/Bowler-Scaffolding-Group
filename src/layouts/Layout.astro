---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
}
import "@fontsource/montserrat/variable.css";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-7E3H01MWBG"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-7E3H01MWBG");
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="mask-icon" href="/mask-icon.svg" color="#f15a24" />
    <meta name="generator" content={Astro.generator} />
    <!-- HTML Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Facebook Meta Tags -->
    <meta
      property="og:url"
      content="https://www.miltonkeynesscaffolding.co.uk/"
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Milton Keynes Scaffolding Specialists LTD"
    />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://www.miltonkeynesscaffolding.co.uk/og.jpg"
    />
    <meta property="og:logo" content="/mask-icon.svg" />
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="miltonkeynesscaffolding.co.uk" />
    <meta
      property="twitter:url"
      content="https://www.miltonkeynesscaffolding.co.uk/"
    />
    <meta
      name="twitter:title"
      content="Milton Keynes Scaffolding Specialists LTD"
    />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://www.miltonkeynesscaffolding.co.uk/og.jpg"
    />

    <style>
      a,
      button {
        cursor: pointer !important;
      }
    </style>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
