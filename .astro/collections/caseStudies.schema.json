{
  "$ref": "#/definitions/caseStudies",
  "definitions": {
    "caseStudies": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "minLength": 150,
          "maxLength": 200
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "draft": {
          "type": "boolean"
        },
        "relatedServices": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Domestic Scaffolding",
              "Commercial Scaffolding",
              "Industrial Scaffolding",
              "Specialist Scaffolding"
            ]
          },
          "default": []
        },
        "client": {
          "type": "string"
        },
        "clientLogo": {
          "type": "string"
        },
        "coverImage": {
          "type": "string"
        },
        "coverImageAlt": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "publishDate",
        "coverImage"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}